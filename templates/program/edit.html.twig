{% extends 'app.html.twig' %}

{% block title %}Editar Programa{% endblock %}

{% block content %}
 <div class="row page-titles">
    <div class="col-md-7 col-12 align-self-center">
        <h3 class="text-themecolor mb-0">Programa {{ program.name }}</h3>
    </div>
    <div class="col-md-5 col-12 align-self-center">
        <div class="d-flex mt-2 justify-content-end">
            <div class="d-flex me-3 ms-2">
                <div class="row button-group">
                    <a href="{{ path('app_program_list') }}" title="Volver">                
                      <button type="button" class="justify-content-center w-100 btn btn-rounded btn-info d-flex align-items-center">                      
                              <i data-feather="arrow-left" class="feather-sm fill-white me-2"></i>Volver
                      </button>   
                    </a>                 
                </div>
            </div>
        </div>
    </div>
 </div>

 <div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Editar Programa</h4>

                    {{ include('program/_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block footer_javascripts %}
    {{ parent() }}
    <script type="text/javascript">
         jQuery( document ).ready(function () {
            if (jQuery('#datatable-documents').length > 0 ){                            
                jQuery("#datatable-documents").DataTable({
                    responsive: true,
                    language: {
                    url: "{{ asset('dist/js/datatables_i18n_es-ES.json') }}"
                    }
                });
            }    
        });
    </script>
  {% endblock %}
