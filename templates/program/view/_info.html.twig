<div class="col-lg-12">
    <div class="row">

        <div class="col-md-6">
            <div class="form-group row py-3">
                <label class="control-label text-end col-md-4 font-weight-medium">Código:</label>
                <div class="col-md-8">
                    <p class="form-control-static">{{ program.code }}</p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group row py-3">
                <label class="control-label text-end col-md-4 font-weight-medium">Nombre:</label>
                <div class="col-md-8">
                    <p class="form-control-static">{{ program.name }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group row py-3">
                <label class="control-label text-end col-md-2 font-weight-medium">Descripción:</label>
                <div class="col-md-10">
                    <p class="form-control-static">{{ program.description }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group row py-3">
                <label class="control-label text-end col-md-4 font-weight-medium">Fecha Inicio:</label>
                <div class="col-md-8">
                    <p class="form-control-static">{{ program.datestart|date('d/m/Y') }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group row py-3">
                <label class="control-label text-end col-md-4 font-weight-medium">Fecha Fin:</label>
                <div class="col-md-8">
                    <p class="form-control-static">{{ program.dateend|date('d/m/Y') }}</p>
                </div>
            </div>
        </div>

    </div>                  
</div>                  