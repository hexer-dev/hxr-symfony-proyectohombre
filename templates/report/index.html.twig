{% extends 'app.html.twig' %}

{% block title %}Infomres{% endblock %}

{% block content %}
 <div class="row page-titles">
    <div class="col-md-7 col-12 align-self-center">
        <h3 class="text-themecolor mb-0">Informes</h3>
        </h6>
    </div>
</div>
 <div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Generar Informe</h4>
                    {{ form_start(form) }}
                        <div class="form-floating mb-3">
                                {{ form_widget(form.dateStart, {'attr': {'class': 'form-control'}}) }}
                                <label>                        
                                    {{ form_label(form.dateStart) }}
                                </label>
                                {{ form_errors(form.dateStart) }}
                        </div>
                        <div class="form-floating mb-3">
                                {{ form_widget(form.dateEnd, {'attr': {'class': 'form-control'}}) }}
                                <label>                        
                                    {{ form_label(form.dateEnd) }}
                                </label>
                                {{ form_errors(form.dateEnd) }}
                        </div>
                        <div class="form-floating mb-3">
                                {{ form_widget(form.program, {'attr': {'class': 'select2 form-select'}}) }}
                                {{ form_label(form.program) }}
                                <small class="form-control-feedback text-danger">
                                    {{ form_errors(form.program) }}
                                </small>
                        </div>                        
                        <div class="d-md-flex align-items-center">                      
                            <div class="mt-3 mt-md-0 ms-auto">
                                {{  form_row(form.save, {'attr': {'class': 'btn btn-info font-weight-medium rounded-pill px-4'}}) }}
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}