{{ form_start(form) }}
<!-- Tab panes -->
<div class="tab-content">
    <div class="tab-pane active" id="setting" role="tabpanel">
        <div class="p-3">
            <div class="form-floating mb-3">
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                <label>                                
                    {{ form_label(form.name) }}
                </label>
                {{ form_errors(form.name) }}
            </div>
            <div class="form-floating mb-3">
                {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                <label>                                
                    {{ form_label(form.phone) }}
                </label>
                {{ form_errors(form.phone) }}
            </div>
            <div class="form-floating mb-3">
                {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
            <label>                        
                {{ form_label(form.address) }}
            </label>
                {{ form_errors(form.address) }}
            </div>
        </div>
    </div>
    <div class="tab-pane  p-3" id="professionals" role="tabpanel">
        <div class="form-floating mb-3">
            <div class="table-responsive table-responsive-professional">
                    <table id="datatable-professional" class="table display table-bordered table-striped no-wrap">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Apellidos</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% if headquarter.users is defined  and headquarter.users|length > 0 %}
                                {% for user in headquarter.users %}
                                    <tr>
                                        <td>{{ user.name }}</td>
                                        <td>{{ user.lastname }}</td>
                                        <td>{{ user.email }}</td>                                        
                                    </tr>
                                {% endfor %}
                            {% else %}
                                    <tr>
                                        <td colspan="3">No existen profesionales para esta sede</td>
                                    </tr>
                            {% endif %}
                        </tbody>
                    </table>
            </div>
        </div>
    </div>
</div>

<div class="d-md-flex align-items-center">                      
    <div class="mt-3 mt-md-0 ms-auto">
        {{  form_row(form.save, {'attr': {'class': 'btn btn-info font-weight-medium rounded-pill px-4'}}) }}
    </div>
</div>
{{ form_end(form) }}
