{% extends 'app.html.twig' %}

{% block title %}Nuevo Usuario{% endblock %}

{% block content %}
 <div class="row page-titles">
    <div class="col-md-7 col-12 align-self-center">
        <h3 class="text-themecolor mb-0">Profesional {{ entity.lastname ~ ", " ~ entity.name }}</h3>
    </div>
    <div class="col-md-5 col-12 align-self-center">
        <div class="d-flex mt-2 justify-content-end">
            <div class="d-flex me-3 ms-2">
                <div class="row button-group">
                    <a href="{{ path('app_user_list') }}" title="nuevo">                
                      <button type="button" class="justify-content-center w-100 btn btn-rounded btn-info d-flex align-items-center">                      
                              <i data-feather="arrow-left" class="feather-sm fill-white me-2"></i>Volver
                      </button>   
                    </a>                 
                </div>
            </div>
        </div>
    </div>
 </div>

 <div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Modificar Profesional</h4>

                    {{ include('user/_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block footer_javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        jQuery( document ).ready(function () {
            jQuery('select#user_roles').on('change', function(e){ 
                var optionSelected = jQuery(this).find(":selected").val();

                if (optionSelected == 'ROLE_MANAGER' || optionSelected == 'ROLE_CONSULTANT') {
                    jQuery('.form-user-headquarter').removeClass("no-visible");  
                } else {
                    if (!jQuery('.form-user-headquarter').hasClass("no-visible")) {
                        jQuery('.form-user-headquarter').addClass("no-visible");  
                    }                    
                }
            });
        }); 
        
    </script>
{% endblock %}
