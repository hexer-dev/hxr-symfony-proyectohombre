{% extends 'base.html.twig' %}

{% block body %}
    <div class="main-wrapper">
        <div class="row auth-wrapper gx-0">

            <div class="col-lg-3 bg-info auth-box-2 on-sidebar">
                <div class="h-100 d-flex align-items-center justify-content-center">
                    <div class="row justify-content-center text-center">
                        <div class="col-md-7 col-lg-12 col-xl-9">
                            <div>                    
                                <span class="db">
                                    <img src="{{ asset('images/logo-white.svg') }}" alt="pphh" class="light-logo"/>
                                </span>                    
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-9 d-flex align-items-center justify-content-center">
                <div class="row justify-content-center w-100 mt-4 mt-lg-0">
                    <div class="col-lg-4 col-md-6">
                        <div class="card" id="loginform">
                            <div class="card-body">
                                <h2>Identifíquese</h2>                                
                                <form class="form-horizontal mt-4 pt-4 needs-validation" novalidate action="{{ path('app_login') }}" method="post">
                                    <div class="form-floating mb-3">
                                        <input type="email" class="form-control form-input-bg" name="_username" id="username" value="{{ last_username }}" placeholder="example@email.com" required />
                                        <label for="username">Email</label>
                                        <div class="invalid-feedback">Email es obligatorio</div>
                                    </div>

                                    <div class="form-floating mb-3">
                                        <input type="password" name="_password" class="form-control form-input-bg" id="password" placeholder="*****" required />
                                        <label for="password">Contrseña</label>
                                        <div class="invalid-feedback">La contraseña es obligatoria</div>
                                    </div>

                                    <div class="d-flex align-items-center mb-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="" id="r-me1" required />
                                            <label class="form-check-label" for="r-me1">
                                                Recuérdame
                                            </label>
                                        </div>
                                        <div class="ms-auto">
                                            <a href="javascript:void(0)" id="to-recover" class="fw-bold">¿Olvidó la contraseña?</a>
                                        </div>
                                    </div>
                                    <div class="d-flex align-items-stretch button-group mt-4 pt-2">
                                        <button type="submit" class="btn btn-info btn-lg px-4">
                                            Entrar
                                        </button>                                
                                    </div>
                                    <input type="hidden" name="_target_path" value="/">
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
